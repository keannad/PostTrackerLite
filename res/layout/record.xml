<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:clickable="true" android:id="@+id/record_LLRecord"
              android:longClickable="false">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:id="@+id/record_id" android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="1pt"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Track Number"
                android:id="@+id/record_tracknumber" android:layout_marginLeft="5pt" android:autoText="false"/>
    </LinearLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Commentary"
            android:id="@+id/record_comment" android:layout_gravity="center" android:layout_marginLeft="1pt"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="1pt">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Export Country"
                android:id="@+id/record_out_country" android:layout_gravity="center_horizontal|top"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal|bottom">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="99"
                      android:id="@+id/record_days_in_way" android:layout_gravity="center_horizontal|bottom|top"
                      android:layout_marginLeft="2pt" android:layout_marginRight="2pt"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/record_imageview"
                    />
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Import Country"
                android:id="@+id/record_in_country" android:layout_gravity="center_horizontal|bottom"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_marginLeft="1pt">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01.01.2013"
                android:id="@+id/record_last_check_date"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Last Strate"
                android:id="@+id/record_last_state" android:layout_marginLeft="3pt"/>
    </LinearLayout>
</LinearLayout>